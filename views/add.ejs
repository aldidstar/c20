  <body>
    <form action="/add" method="post">
    <h1>ADD DATA</h1>
    <label id="Name" for="Name">Name</label>
    <input type="text" id="Name" name="name" placeholder="Enter your name"/>
    <br /><br />
    <label id="Weight" for="Weight">Weight</label>
    <input type="number" id="Weight" name="weight" placeholder="Enter your weight (kg)"/>
    <br /><br />
    <label id="Height" for="Height">Height</label>
    <input type="number" id="Height" name="height" placeholder="Enter your Height (cm)"/>
    <br /><br />
    <label id="Date" for="Date">Date</label>
    <input type="date" id="Date" name="date" placeholder="Enter your birthdate" />
    <br /><br />
    <label id="Status" for="Status">Marriage Status </label>
    <select type="boolean" id="Status" name="status" >
      <option value='true'>true</option>
      <option value='false'>false</option>
    </select>
    <br /><br />
    <button type="submit" class="save">Save
    </button>
    <button> <a class="back" href="/"> Back</a>
    </button>
    
  </form>
  </body>
